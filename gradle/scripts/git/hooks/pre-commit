#fi

./gradlew spotlessCheck
RESULT=$?

if [ "$RESULT" = 0 ] ; then
        echo "Spotless ✅"
        exit 0
else
        echo "Spotless ❌"
        echo "Applying Spotless"
        ./gradlew spotlessApply
        exit 1
fi