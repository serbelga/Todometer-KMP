#!/bin/sh

export JAVA_HOME=`/usr/libexec/java_home -v 17`

#./gradlew detekt
#RESULT=$?
#
#if [ "$RESULT" = 0 ] ; then
#        echo "Detekt ✅"
#else
#        echo "Detekt ❌"
